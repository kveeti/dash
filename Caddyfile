{
    debug
    log {
        level DEBUG
    }
}

 :3000 {
    handle /api/* {
        reverse_proxy host.docker.internal:8000
    }

    handle / {
        @no_auth {
            not header Cookie *auth=*
        }
        redir @no_auth http://localhost:3000/api/auth/init
        reverse_proxy host.docker.internal:8001
    }

    handle /* {
        reverse_proxy host.docker.internal:8001
    }
}
